<table class="row content blue">
  <tr>
    <td class="center" align="center">
      <center>
        <table class="container">
          <tr>
            <td class="wrapper last" style="padding-top: 0px !important;">
              <table class="twelve columns">
                <tr>
                  <td class="panel heading gold">
                    <h2>
                      <% if spotlight.length > 1 %>
                        Spotlight: <%= spotlight.map{ |s| s.header }.join(" & ") %>
                      <% else %>
                        Spotlight: <%= spotlight.first.header %>
                      <% end %>
                    </h2>
                  </td>
                  <td class="expander"></td>
                </tr>
              </table>
            </td>
          </tr>
        </table>
      </center>
    </td>
  </tr>
</table>
<% spotlight.each_with_index do |s, i| %>
  <table class="container content">
    <tr>
      <td>
        <table class="row">
          <tr>
            <td class="wrapper last">
              <table class="twelve columns">
                <tr>
                  <td class="text-pad">
                    <%= a_href("spotlight", i) %>
                      <%= image_tag s.img %>
                    <%= end_link %>
                    <br>
                    <h3 class="lead">
                      <%= a_href("spotlight", i) %>
                        <%= s.title %>
                      <%= end_link %>
                    </h3>
                    <p class="lead">
                      <%= s.text %>
                      <%= a_href("spotlight", i) %>
                        &rarr; Read More
                      <%= end_link %>
                    </p>
                  </td>
                  <td class="expander">
                    <%= tag :img, :src => "#{track_opens_url}" %>
                  </td>
                </tr>
              </table>
            </td>
          </tr>
        </table>
      </td>
    </tr>
  </table>
<% end %>